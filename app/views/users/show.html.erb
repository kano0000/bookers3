<div class = "containar">
  <%= render "layouts/errors", obj: @book%>
  <div class = "row col-11 mx-auto">
    <div class = "col-md-3">
      <h2>User info</h2>
      <%= render "info", user: @user %>
      <h2>New book</h2>
        <%= render "books/form", book: @book %>
    </div>
    <div class = "col-md-8 offset-md-1">
      <h2>Books</h2>
        <%= render "books/index", books: @books %>
      <h4>投稿数の前日比・前週比</h4>
      <div class = "table_container">
        <table class = "table table-bordered">
          <thead>
            <tr>
              <th>今日の投稿数</th>
              <th>前日の投稿数</th>
              <th>前日比</th>
            </tr>
          </thead>
          <tbody>
            <tr>
              <td><%= @today_book.count %></td>
              <td><%= @yesterday_book.count %></td>
              <td>
                <% if @yesterday_book.count == 0 %>
                  前日の投稿はありません
                <% else %>
                  <% @ratio_day_before = @today_book.count / @yesterday_book.count.to_f %>
                  <%=  (@ratio_day_before*100).round %>
                <% end %>
              </td>
            </tr>
          </tbody>
        </table>
        <table class = "table table-bordered">
          <thead>
            <tr>
              <th>今週の投稿数</th>
              <th>前週の投稿数</th>
              <th>前週比</th>
            </tr>
          </thead>
          <tbody>
            <tr>
              <td><%= @this_week_book.count %></td>
              <td><%= @last_week_book.count %></td>
              <td>
                <% if @last_week_book.count == 0 %>
                  前週の投稿はありません
                <% else %>
                  <% @ratio_week_before = @this_week_book.count / @last_week_book.count.to_f %>
                  <%=  (@ratio_week_before*100).round %>
                <% end %>
              </td>
            </tr>
          </tbody>
        </table>
        <h4>7日間分の投稿数</h4>
          <table class="table table-bordered">
            <tbody>
              <tr>
                <% (6.downto(0)).each do |n| %>
                  <td><%= n == 0 ? '今日' : "#{n}日前" %></td>
                <% end %>
              </tr>
              <tr>
                <% (6.downto(0)).each do |n| %>
                  <td><%= @books.where(created_at: n.day.ago.all_day).count %></td>
                <% end %>
              </tr>
            </tbody>
          </table>
      </div>
    </div>
  </div>
</div>