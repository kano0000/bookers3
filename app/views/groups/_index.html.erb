<table class = "table table-hover">
  <thead>
  <tr>
    <th></th>
    <th>name</th>
    <th>introduction</th>
    <th colspan="3"></th>
  </tr>
  </thead>
  <tbody>
  <tr>
    <% groups.each do |group| %>
    <td>
      <%= image_tag group.get_group_image(50,50) %>
     </td>
     <td>
      <%= link_to group_path(group) do %>
        <%= group.name %>
      <% end %>
    </td>
    <td><%= group.introduction %></td>
    <td><%= link_to "Show", group_path(group) %></td>
    <td>
      <% if gruop.user == current_user %>
        <%= link_to "Edit",edit_group_path(group), class: "btn btn-success"%>
      <% end %>
    </td>
    <% end %>
  </tr>
  </tbody>
</table>