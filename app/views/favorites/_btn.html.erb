<% if book.favorited_by?(current_user) %>
  <%= link_to book_favorites_path(book), method: :delete, remote: true do %>
    <i class="fa-solid fa-heart" style="color: red;"> <%= book.favorites.count %> いいね</i>
  <% end %>
<% else %>
  <%= link_to book_favorites_path(book), method: :post, remote: true do %>
    <i class="fa-solid fa-heart" style="color: blue;"> <%= book.favorites.count %> いいね</i>
  <% end %>
<% end %>